<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
			<div id="ph_header">
				<div id="header_register">
				<%= form_tag("/") do %>
				  <%= label_tag :user, "User: " %><%= text_field_tag :user, nil, :size => 18 %></br>
				  <%= label_tag :password, "Password: " %><%= password_field_tag :password, nil, :size => 18 %></br>
				  Remember password <%= submit_tag "Login", :class => "button" %>
				<% end %>
				</div>
				<p>PubliHot</p>
			</div>
			<div id="ph_body">
				<% flash.each do |name, msg| %>
	        <%= content_tag :div, msg, :id => "flash_#{name}" %>
	      <% end %>
	      <div id="body_left">
	        Panel de la izquierda
	      </div>
	      <div id="body_right">
				  Panel de la derecha
				</div>
	      <div id="body_center">
	        <%= content_tag :h1, yield(:title) if show_title? %>
  	      <%= yield %>
	      </div>
			</div>
			<div id="ph_footer">
				<p>@ 2012. PubliHot, S.L. Todos los derechos reservados.</p>
			</div>
    </div>
  </body>
</html>
